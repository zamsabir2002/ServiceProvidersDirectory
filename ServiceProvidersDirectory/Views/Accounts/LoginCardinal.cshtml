@model ServiceProvidersDirectory.Models.LoginView

<h4 class="w-100 text-center">Login</h4>
<hr />
<div class="row align-items-center justify-content-center">
    <div class="w-50">
        <form asp-action="LoginCardinal" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" name="email" type="email" class="form-control" required/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" name="password" type="password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        
            <button type="submit" class="btn btn-primary mt-4">Login</button>
            
        </form>
    </div>
</div>

