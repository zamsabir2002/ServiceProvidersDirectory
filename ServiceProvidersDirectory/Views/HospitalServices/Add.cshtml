@model ServiceProvidersDirectory.Models.HospitalService

@{
    ViewData["Title"] = "Add Service";
}

<h1>Add Service</h1>

<h4>Hospital: @(ViewBag.HospitalName)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="HospitalId" class="control-label"></label>
                <select asp-for="HospitalId" class ="form-control user-select-none">
                    <option selected>
                        @(ViewBag.HospitalId)
                    </option>
                </select>
            </div>

            <div class="form-group">
                <label for="Hospital" class="control-label">Hospital Name</label>
                <input class="form-control" disabled value="@(ViewBag.HospitalName)" />
            </div>

            <div class="form-group">
                <label asp-for="ServiceId" class="control-label">Service Name</label>
                <select asp-for="ServiceId" class ="form-control" asp-items="ViewBag.ServiceId"></select>
            </div>


            <div class="form-group visually-hidden">
                <label asp-for="UpdatedById" class="control-label"></label>
                <select asp-for="UpdatedById" class="form-control">
                    <option selected>
                        @(ViewBag.UpdatedById)
                    </option>
                </select>
            </div>
            
            <div class="form-group my-2">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
